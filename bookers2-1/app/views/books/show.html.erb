
<h1>Book detail</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opnion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
   <% @books.each do |book| %>
  <tbody>    
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>
        <%= link_to "Edit", edit_book_path(book.id) %>
        <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に消しますか？" %>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>
