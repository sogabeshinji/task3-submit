
  <p id="notice"></p>
  <div class="container">
    <div class="row">

      <%= render 'template', book: @new_book %>
      
        <div class="col-md-8 offset-md-1">
          <h2>Book detail</h2>
          <table class="table">
            <tbody>
              <tr>
                <td>
                <%=image_tag @user.get_profile_image %>
                  <br>
                    <%= link_to @user.name, user_path(@user) %>
                </td>
                <td><%= link_to @book.title, book_path(@book) %></td>
                <td><%= @book.body %></td>
                <td>
                <% if @book.user == current_user %>
                  <%= link_to "Edit", edit_book_path, class:"btn btn-sm btn-success" %>
                </td>
                <td>
                  <%= link_to "Destroy", book_path(@book), class:"btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %>
                <% end %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>

      </div>
    </div>
  </div>  
