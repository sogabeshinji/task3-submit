
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <% if @book.errors.any? %>
    <div id="error_explanation">
      <h3>
        <%= @book.errors.count %> errors prohibited this obj from being saved:
      </h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>       
    <div class="row">

      <%= render 'template', book: @book %>
    
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opnion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td>
                <%=link_to image_tag(book.user.get_profile_image), user_path(book.user) %>
              </td>
              <td>
                <%= link_to book.title, book_path(book.id) %>
              </td>
              <td>
                <%= book.body %>
              </td>
            <% end %>

            </tr>
          </tbody>
        </table>
      </div>
      
    </div>
  </div>  
